{
  "name": "noosfera/portfolio",
  "description": "Noosfera - Ukrainian Mythology Art Portfolio",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "twig/twig": "^3.8"
  },
  "require-dev": {
    "symfony/var-dumper": "^6.4"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "includes/config.php",
      "includes/helpers.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"echo 'Autoload updated automatically\\n';\""
    ],
    "post-update-cmd": [
      "@php -r \"echo 'Autoload updated automatically\\n';\""
    ]
  },
  "config": {
    "optimize-autoloader": true
  }
}
