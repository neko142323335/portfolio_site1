{% extends "base.html.twig" %}

{% block title %}Адмін Вхід - {{ site_name }}{% endblock %}

{% block content %}
  <section class="auth-section">
    <div class="auth-container">
      <h2 class="auth-title" style="color: #ff4500;">Облік</h2>

      <ul class="nav nav-tabs auth-tabs" role="tablist">
        <li class="nav-item" role="presentation">
          <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab">
            <i class="bi bi-box-arrow-in-right"></i> Вхід
          </button>
        </li>
      </ul>

      <div class="tab-content">
        <!-- Admin Login Tab -->
        <div class="tab-pane fade show active" id="login" role="tabpanel">
          <form method="POST" action="" class="auth-form mt-4">
            {% if error %}
              <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <div class="mb-3">
              <label for="email" class="form-label">
                <span style="color: #ff4500;">
                  <i class="bi bi-envelope-fill"></i> Email адміністратора
                </span>
              </label>
              <input 
                type="email" 
                class="form-control" 
                id="email" 
                name="email" 
                required
                placeholder="admin@example.com"
              >
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">
                <span style="color: #ff4500;">
                  <i class="bi bi-lock-fill"></i> Пароль
                </span>
              </label>
              <div class="input-group position-relative">
                <input 
                  type="password" 
                  class="form-control" 
                  id="password" 
                  name="password" 
                  required
                  placeholder="••••••••"
                >
                <button 
                  type="button" 
                  class="password-toggle" 
                  data-target="password"
                  aria-label="Показати пароль"
                >
                  <i class="bi bi-eye"></i>
                </button>
              </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-box-arrow-in-right"></i> Увійти
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  {% include 'footer.html.twig' %}
{% endblock %}
